@model CreatedEmployeeDto

@{
    ViewData["Title"] = "Create";
}
<div class="row justify-content-center align-items-center flex-column">
    <h1 class="col-6 my-4" >Create New Employee</h1>

    <form asp-action ="Create"  class="col-6">

        <div class="form-group col-6">
            <label class="form-label " asp-for="Name"></label>
            <input asp-for="Name" class="form-control mb-3" />
            <span asp-validation-for="Name"  class="text-danger"></span>
        </div>
        <div class="form-group col-6">
            <label class="form-label " asp-for="Email"></label>
            <input asp-for="Email" class="form-control mb-3" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group col-6">
            <label class="form-label" asp-for="Address"></label>
            <input asp-for="Address" class="form-control mb-3" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group col-6">
            <label class="form-label" asp-for="Age"></label>
            <input asp-for="Age" class="form-control mb-3" />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>
        <div class="form-group col-6">
            <label class="form-label" asp-for="Salary"></label>
            <input asp-for="Salary" class="form-control mb-3" />
            <span asp-validation-for="Salary" class="text-danger"></span>
        </div>
        <div class="form-group col-6">
            <label class="form-label" asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" class="form-control mb-3" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group col-6">
            <label asp-for="EmplyeeType" class="control-label"></label>
            <select asp-for="EmplyeeType" asp-items="Html.GetEnumSelectList<EmplyeeType>()" class="form-control">
                <option value="">Choose... </option>
                
            </select>


        </div>
        <div class="form-group col-6">
            <label class="control-label" asp-for="Gender"> </label>
            @foreach (Gender genderOperation in Enum.GetValues(typeof(Gender)))
            {
                    <div class="form-check">
                       <input type="radio" class="form-check-input" asp-for="Gender" value="@genderOperation" />
                       <label class="form-check-label" asp-for="Gender">
                        @genderOperation
                       </label>
                    </div>
            }
        </div>
        <div class="form-check col-12 mt-3">
            <input asp-for="IsActive" class="form-check-input mb-3" />
            <label class="form-check-label" asp-for="IsActive"></label>
        </div>
        <div class="form-group col-12 my-2">
            <label class="form-label" asp-for="HiringDate"></label>
            <input type="date" asp-for="HiringDate" class="form-control mb-3" />
        </div>
        <div class="mt-3">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-light">Back To List</a> 
        </div>

    </form>
</div>

@section ValidationScripts {

    <partial name="_ValidationScriptsPartial" />

}
